# Copy this file to docker/.env.compose or run:
#   bun run generate:secrets --force
# to rotate the Postgres/Electric proxy credentials used by Compose.
POSTGRES_USER=ochat_app
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_DB=openchat
DATABASE_URL=postgres://ochat_app:replace-with-strong-password@postgres:5432/openchat
SHADOW_DATABASE_URL=postgres://ochat_app:replace-with-strong-password@postgres:5432/openchat_shadow
PG_PROXY_PASSWORD=replace-with-strong-password
ELECTRIC__PG_PROXY__PASSWORD=replace-with-strong-password
ELECTRIC_GATEKEEPER_SECRET=replace-with-strong-secret
ELECTRIC_SECRET=replace-with-strong-secret
BETTER_AUTH_SECRET=replace-with-strong-secret
