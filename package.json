{
  "name": "openchat",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "turbo lint",
    "dev": "turbo -F web -F server dev",
    "build": "turbo -F server build",
    "build:web": "turbo -F web build",
    "deploy": "bun ./scripts/deploy.ts",
    "check-types": "turbo check-types",
    "verify:prod": "bun ./scripts/prod-canary.ts",
    "test": "vitest run --config vitest.config.unit.ts && vitest run --config vitest.config.component.ts && vitest run --config vitest.config.integration.ts",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:component": "vitest run --config vitest.config.component.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:watch": "vitest --config vitest.config.unit.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.unit.ts",
    "test:web": "vitest run apps/web/test",
    "test:server": "vitest run apps/server/test",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:extension": "turbo -F extension dev",
    "build:extension": "turbo -F extension build",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "setup:db": "bun run scripts/setup-db.ts",
    "generate:secrets": "bun run scripts/generate-secrets.ts",
    "convex:dev": "cd apps/server && convex dev",
    "convex:codegen": "cd apps/server && convex codegen",
    "convex:migrate": "bun ./scripts/run-migrations.ts",
    "convex:verify": "bun ./scripts/run-migrations.ts --verify-only",
    "verify:build": "rm -rf apps/web/.next && (cd apps/web && bunx next build) && bunx turbo run build --filter=web --filter=server"
  },
  "dependencies": {
    "@ai-sdk/provider-utils": "^3.0.17",
    "@convex-dev/better-auth": "^0.9.7",
    "@emotion/react": "^11.14.0",
    "@vercel/analytics": "^1.5.0",
    "@workos-inc/node": "^7.72.2",
    "better-auth": "^1.3.34",
    "better-sqlite3": "^12.4.1",
    "motion": "^12.23.24",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.8",
    "convex": "^1.29.1",
    "happy-dom": "^20.0.10",
    "msw": "^2.12.2",
    "oxlint": "^1.28.0",
    "turbo": "^2.6.1",
    "vitest": "^4.0.8",
    "ws": "^8.18.0"
  },
  "packageManager": "bun@1.3.0"
}
