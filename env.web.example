# Web environment template (`apps/web/.env.local`)
# Copy to apps/web/.env.local (or .env) and replace placeholders.

# --- WorkOS AuthKit --------------------------------------------------------
WORKOS_CLIENT_ID=client_xxxxx
WORKOS_API_KEY=sk_test_xxxxx
WORKOS_COOKIE_PASSWORD=replace-with-strong-password
NEXT_PUBLIC_WORKOS_REDIRECT_URI=http://localhost:3001/auth/callback
CONVEX_URL=http://localhost:3210
NEXT_PUBLIC_CONVEX_URL=http://localhost:3210

# --- Core URLs --------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://ochat.pro
# Optional aliases (leave blank to fall back to NEXT_PUBLIC_APP_URL)
NEXT_PUBLIC_SITE_URL=
NEXT_PUBLIC_WEB_URL=
NEXT_PUBLIC_BASE_URL=
NEXT_PUBLIC_ORIGIN=
NEXT_PUBLIC_SERVER_URL=https://api.ochat.pro

# (ElectricSQL no longer required; Convex handles sync.)

# --- Feature Flags / Dev Helpers -------------------------------------------
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEPLOYMENT=prod
NEXT_PUBLIC_DEV_BYPASS_AUTH=0
NEXT_PUBLIC_DEV_USER_ID=

# --- Analytics --------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=replace-with-posthog-client-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
