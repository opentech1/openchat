# Authentication (required in production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# API URLs exposed to the browser
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_ELECTRIC_URL=http://localhost:3010

# Server-side ElectricSQL settings
ELECTRIC_SERVICE_URL=http://127.0.0.1:3010
ELECTRIC_GATEKEEPER_SECRET=dev-gatekeeper-secret
PG_PROXY_PASSWORD=dev-proxy-password
ELECTRIC_INSECURE=true
ELECTRIC_LOG_LEVEL=info

# Database configuration (Postgres bundled in the container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=openchat
POSTGRES_SHADOW_DB=openchat_shadow
POSTGRES_PORT=5432
PGDATA=/var/lib/postgresql/data

# Application ports
HOST=0.0.0.0
SERVER_PORT=3000
WEB_PORT=3001
ELECTRIC_HTTP_PORT=3010
ELECTRIC_PROXY_PORT=5133

# OpenRouter encryption secret (set to a strong value in production)
OPENROUTER_API_KEY_SECRET=change-me-please

# Disable auth bypass unless you are developing locally
NEXT_PUBLIC_DEV_BYPASS_AUTH=0
NEXT_PUBLIC_DEV_USER_ID=

# Optional internal URL override for server-to-server requests
SERVER_INTERNAL_URL=
