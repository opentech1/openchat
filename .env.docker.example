# Core database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=openchat
POSTGRES_PORT=5432

# ElectricSQL settings
PG_PROXY_PASSWORD=dev-proxy-password
ELECTRIC_GATEKEEPER_SECRET=dev-gatekeeper-secret
ELECTRIC_INSECURE=true
ELECTRIC_LOG_LEVEL=info
ELECTRIC_SERVICE_URL=http://electric:3010
ELECTRIC_HTTP_PORT=3010
ELECTRIC_PROXY_PORT=5133

# Application ports (host mappings)
SERVER_PORT=3000
WEB_PORT=3001

# Public URLs exposed by the web bundle
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_ELECTRIC_URL=http://localhost:3010

# Better Auth configuration
BETTER_AUTH_SECRET=dev-secret-change-me
BETTER_AUTH_URL=http://localhost:3000
AUTH_COOKIE_DOMAIN=

# Optional overrides
CORS_ORIGIN=http://localhost:3001
DATABASE_URL=postgres://postgres:postgres@postgres:5432/openchat
SHADOW_DATABASE_URL=postgres://postgres:postgres@postgres:5432/openchat_shadow

# Development toggles
DEV_ALLOW_HEADER_BYPASS=1
NEXT_PUBLIC_DEV_BYPASS_AUTH=1
NEXT_PUBLIC_DEV_USER_ID=dev-user
