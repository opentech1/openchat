# Public URL the web app uses to call the Bun server
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Optional Electric SQL sync service
NEXT_PUBLIC_ELECTRIC_URL=http://localhost:3010
NEXT_PUBLIC_ELECTRIC_WORKSPACE_TTL_MS=600000
NEXT_PUBLIC_ELECTRIC_CHAT_TTL_MS=300000
NEXT_PUBLIC_ELECTRIC_MAX_WORKSPACES=4
NEXT_PUBLIC_ELECTRIC_MAX_CHAT_COLLECTIONS=12

# Developer bypass helpers (only use in local dev)
NEXT_PUBLIC_DEV_BYPASS_AUTH=1
NEXT_PUBLIC_DEV_USER_ID=dev-user

# Server-only hint for internal networking (read by Next server components)
SERVER_INTERNAL_URL=http://localhost:3000

# Clerk publishable key for the web app (required for auth UI)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_PUBLISHABLE_KEY=
