# Public URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# WorkOS AuthKit Configuration
# Get these from https://dashboard.workos.com/
WORKOS_CLIENT_ID=client_YOUR_CLIENT_ID_HERE
WORKOS_API_KEY=sk_test_YOUR_API_KEY_HERE
# Generate with: openssl rand -base64 48
WORKOS_COOKIE_PASSWORD=CHANGE_ME_TO_AT_LEAST_32_CHARACTERS_USE_OPENSSL_RAND_BASE64_48
WORKOS_REDIRECT_URI=http://localhost:3001/auth/callback

# Optional Electric SQL sync service
NEXT_PUBLIC_ELECTRIC_URL=http://localhost:3010
NEXT_PUBLIC_ELECTRIC_WORKSPACE_TTL_MS=600000
NEXT_PUBLIC_ELECTRIC_CHAT_TTL_MS=300000
NEXT_PUBLIC_ELECTRIC_MAX_WORKSPACES=4
NEXT_PUBLIC_ELECTRIC_MAX_CHAT_COLLECTIONS=12

# Developer bypass helpers (set to 1 only for local development)
NEXT_PUBLIC_DEV_BYPASS_AUTH=0
NEXT_PUBLIC_DEV_USER_ID=dev-user

# Server-only hint for internal networking (read by Next server components)
SERVER_INTERNAL_URL=http://localhost:3000
