{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@server/*": [
        "../server/*"
      ]
    }
  },
	"include": [
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.d.ts",
		"./.next/types/**/*.ts",
		"./next-env.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"./test",
		"./**/*.spec.ts",
		"./**/*.spec.tsx",
		"./**/*.test.ts",
		"./**/*.test.tsx"
	]
}
