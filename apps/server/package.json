{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "lint": "oxlint",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "test": "bun test ./src/**/*.test.ts",
    "test:watch": "bun test --watch ./src/**/*.test.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "invite:generate": "bun run scripts/generate-invite.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@openchat/auth": "workspace:*",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/server": "^1.8.6",
    "@orpc/zod": "^1.8.6",
    "@posthog/ai": "^1.1.2",
    "ai": "^5.0.44",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.3.21",
    "pg": "^8.16.3",
    "posthog-node": "^5.9.5",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11"
  }
}
