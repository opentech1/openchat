# Web app origin that is allowed to call the Bun API
CORS_ORIGIN=http://localhost:3001

# Internal URL the web app uses to reach this server
SERVER_INTERNAL_URL=http://localhost:3000

# Database connection string (Postgres)
DATABASE_URL=postgres://postgres:postgres@localhost:39029/openchat
# Alternatively, set DATABASE_HOST / DATABASE_PORT / DATABASE_USER / DATABASE_PASSWORD / DATABASE_NAME when your platform injects discrete credentials.

# Electric SQL sync service (optional in dev)
ELECTRIC_SERVICE_URL=http://localhost:3010
ELECTRIC_GATEKEEPER_SECRET=dev-gatekeeper-secret

# Better Auth configuration
BETTER_AUTH_SECRET=dev-secret-change-me
BETTER_AUTH_URL=http://localhost:3000
AUTH_COOKIE_DOMAIN=

# OpenRouter API access
OPENROUTER_API_KEY_SECRET=
# Optional overrides
OPENROUTER_BASE_URL=
OPENROUTER_SCOPE=

# Development helpers
DEV_ALLOW_HEADER_BYPASS=1
DEV_DEFAULT_USER_ID=dev-user

# Rate limiting & networking
RATE_LIMIT_PER_MIN=60
TRUST_PROXY_FORWARDED=0
PORT=3000
